  <keywords>cordova,anychat,plugin</keywords>

  <js-module name="AnyChat" src="www/AnyChat.js">
    <clobbers target="navigator.AnyChat"/>
  </js-module>

  <platform name="android">
    <config-file parent="/*" target="res/xml/config.xml">
